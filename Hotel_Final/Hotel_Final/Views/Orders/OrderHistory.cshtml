@model IEnumerable<Hotel_Final.Models.OrderHistory>
@{
    ViewBag.Title = "OrderHistory";
}



    <div class="container">
       
            <h1 class="text-center mt-5">@(Model.Count()==0? "Sifarişiniz yoxdur":"Sifarişləriniz")</h1>
        

        <div class="row">



            @foreach (var order in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 text-center mt-4 mb-4">

                    <div class="card">
                        <div class="card-body">
                            <h4 style="color:red;font-weight:bold" class="card-title">@order.Product.Name</h4>
                          @*  @if(@order.ApplicationUser.Roles.FirstOrDefault(f=>f.RoleId==order.ApplicationUserId)*@
                            <p>@order.ApplicationUser.UsName</p>

                            <p class="card-text">Sifariş sayı: @order.OrderCount</p>

                            <p class="orderprice">Qiyməti: <span>@(order.TotalPrice == 0 ? "Ödənişsizdir" : order.TotalPrice + "$")</span></p>
                            <p style="color:darkgreen" href="#" class="card-link">@order.CreatedDate.ToString("dd MMMM yyyy")</p>
                            <p>@order.CreatedDate.ToString("HH:mm")</p>
                            @if (order.isDeleted == true && order.TotalPrice != 0)
                            {

                                <span class="paid">Ödənilib</span>
                            }
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
