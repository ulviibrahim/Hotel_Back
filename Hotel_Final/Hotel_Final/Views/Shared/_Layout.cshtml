@using Hotel_Final.Models

@{ 
    Settings setting = ViewBag.Setting;
    var controllerName = this.ViewContext.RouteData.Values["Controller"].ToString().ToLower();

}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Hotel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

    <link rel="stylesheet" href="~/Public/Css/animate.min.css">

    @*<link href="https://fonts.googleapis.com/css?family=Literata|Roboto|Roboto+Slab|Slabo+27px&display=swap"
          rel="stylesheet">*@
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    @RenderSection("css", required: false)
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Public/owlcarousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Public/owlcarousel/owl.theme.default.min.css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/Public/Sass/style.css?time=@DateTime.Now.ToFileTime()">
</head>
<body>
    <!-- Header start -->
    <header id="header" class="animated col-lg-12 col-sm-12">

        <!-- Navbar and toggle collapse begin -->
        <nav class=" navbar  navbar-expand-lg navbar-light container ">

            @Html.ActionLink(setting.Logo, "Index", "Home", new { area = "" }, new { @id = "Brand", @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between " id="navbarSupportedContent">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="@(controllerName=="home"?"active ":"")nav-link" href=@Url.Action("Index", "Home")>Əsas səhifə <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="@(controllerName=="services"?"active ":"")nav-link" href=@Url.Action("Index","Services")>Xidmətlər <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="@(controllerName=="paid"?"active ":"") nav-link" href=@Url.Action("Index","Paid")>İstəklər <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="@(controllerName=="orders"?"active ":"")nav-link" href=@Url.Action("OrderHistory","Orders")>Sifarişlərim <span class="sr-only">(current)</span></a>
                    </li>




                </ul>
                <div class="Login d-flex justify-content-between">
                    <a class="basket" href="/Orders/OrderHistory"><i class="fas fa-shopping-cart"></i><span></span></a>

                    @Html.Partial("_LoginPartial")
                </div>

            </div>
        </nav>
    </header>
    <!-- Header end -->
    @RenderBody()
<div style="width: 100%; height: 401px;" class="load d-none fixed-top">
    <img style="background-color: #343a404a; width: 100%; height: 100vh" src="~/Public/img/Spin-Preloader.gif" alt="Alternate Text" />
</div>

    <!-- Start footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="margin left col-lg-4 col-md-6 col-sm-12">
                    <h4>@setting.Logo</h4>
                    <p class="mt-4 mb-4">
                        @setting.Desc
                    </p>
                    <ul class="list-unstyled sosial">
                        <li>
                            <a href=@setting.Facebook><i class="fab fa-facebook-f"></i> </a>
                        </li>
                        <li>
                            <a href=@setting.Twitter><i class="fab fa-twitter"></i> </a>
                        </li>
                        <li>
                            <a href=@setting.GooglePlus><i class="fab fa-google-plus-g"></i></i> </a>
                        </li>
                        <li>
                            <a href=@setting.Instagram><i class="fab fa-instagram"></i></a>
                        </li>
                        <li>
                            <a href=@setting.Youtube><i class="fab fa-youtube"></i> </a>
                        </li>
                    </ul>
                </div>
                <div class="margin  middle col-lg-4 col-md-6 col-sm-12">
                    <h4 class="ml-3">@setting.Title</h4>
                    <ul class="list-group ml-3 list-group-flush">
                        <li class="list-group-item border-top-0"><i class="fas fa-map-marker-alt"></i><a style="color:white; font-size:20px; text-decoration:none" href=@setting.Locations>Af Biznes House</a> </li>
                        <li class="list-group-item"><i class="fas fa-phone"></i>@setting.Phones</li>
                        <li class="list-group-item"> <i class="fas fa-mobile-alt"></i>3333-2222-1111</li>
                        <li class="list-group-item"><i class="fas fa-envelope"></i> <a style="color:white; font-size:20px; text-decoration:none" href=@Url.Action("Index","Contact")>@setting.Email</a></li>
                    </ul>
                </div>
                <div class="margin right col-lg-4 col-md-6 col-sm-12">
                    <h4 class="ml-3">NEWSLETTER</h4>
                    <p class="mt-4 mb-4">Saytımız barədə sizə bildirişlərin gəlməsini istəyirsinizsə emailinizi bizə göndərin</p>
                    <form>
                        <div class="input-group">
                            <input class="form-control" type="text" name="Subscribe" id="Subscribe">
                        </div>
                        <button type="submit" class="mt-4 sub btnLogin">Subscribe</button>

                    </form>
                </div>

            </div>


            <div class="end mt-3">@setting.Info</div>
        </div>

    </footer>


    <!-- end footer -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>






    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)


    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script> 
    <script src="http://threejs.org/examples/js/libs/stats.min.js"></script>*@
    <script src="~/Public/owlcarousel/owl.carousel.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/Scripts/main.js?time=@DateTime.Now.ToFileTime()"></script>
</body>

</html>